          <%= f.input :name%>
          <%= f.input :description%>
          <%= f.input :cost%>
          <div>
            <div class="button-cluster">
                <button type="button" id="custom-button-act">ðŸ“· Upload photos</button>
                <span id="custom-text-act">No photo chosen, yet.</span>
                <%= f.input :photos, as: :file, label: false, input_html: { multiple: true }%>
              </div>
              <div>
                <%= f.submit class:"search-button", style:"margin: 0px 0px 50px 0px;" %>
              </div>
          </div>
        <% end %>
     </div> 
  </div>
</div>