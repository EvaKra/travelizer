<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag('LogoTravelizer.png') %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>


        <li class="nav-item active">
          <%= link_to "My itineraries", user_path(current_user) , class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "New itinerary", new_itinerary_path , class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Profile", user_path(current_user) , class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Messages", chatrooms_path(@chatroom) , class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Search", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%# <%= link_to root_path, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %> 
          <% if current_user.avatar.attached? %>
            <%= cl_image_tag current_user.avatar.key, class: "avatar" %>
          <%else%>
            <div class="avatar-icon"><i class="fas fa-user-circle"></i></div>
          <%end%> 
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

