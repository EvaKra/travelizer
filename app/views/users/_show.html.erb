<div class="description-box" id="description-event">
    <div class="title-edit">
        <div class="about">
            <h3>About me</h3>
        </div>
        <div class="edit-icon">
            <% if current_user == @user %>
                <span style="font-size: 16px;"><%= link_to "<i class='far fa-edit'></i>".html_safe, edit_user_path(@user), id:"user-edit", remote: true %></span>
            <%end%>
        </div>
    </div>    
        <% if @user.description? %>
            <p><%= @user.description%></p>
        <% else %>
            <p>Tell other travellers a bit about yourself.</p>
        <%end%>                    
</div>



