  <%#= f.select :transport_type, ['Boat','Car', 'Flight', 'Train', 'Taxi', 'Uber']%>
  <%= f.input :start_location%>
  <%= f.input :via_location%>
  <%= f.input :end_location%>
  <%= f.submit %>
<% end %>