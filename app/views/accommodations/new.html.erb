        <%= f.input :address%>
        <%= f.input :accommodation_type%>
        <div>
            <div class="button-cluster">
                <button type="button" id="custom-button-acc">ðŸ“· Upload photos</button>
                <span id="custom-text-acc">No photo chosen, yet.</span>
